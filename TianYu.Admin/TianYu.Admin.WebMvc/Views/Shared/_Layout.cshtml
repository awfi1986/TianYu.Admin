@{
    Layout = null;
    var userActions = ViewBag.UserActions as IEnumerable<TianYu.Admin.Domain.ViewModel.SystemButtonRoleViewModel>;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    @*<link href="/Content/layui/css/layui.css" rel="stylesheet" />
        <link rel="stylesheet" href="/Content/static/css/font.css">
        <link rel="stylesheet" href="/Content/static/css/weadmin.css">
        <script src="/Content/layui/layui.js"></script>
        <script src="~/Content/static/js/admin.js"></script>*@

    <link rel="stylesheet" href="@ViewBag.FileResourcesDomain/Content/static/css/font.css?v=1.0">
    <link rel="stylesheet" href="@ViewBag.FileResourcesDomain/Content/static/css/weadmin.css?v=1.0">
    <script src="@ViewBag.FileResourcesDomain/Content/layui/layui.js?v=1.0"></script>
    <script src="@ViewBag.FileResourcesDomain/Content/static/js/admin.js?v=1.0"></script>
    <!-- 让IE8/9支持媒体查询，从而兼容栅格 -->
    <!--[if lt IE 9]>
      <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
      <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="weadmin-nav">
        <span class="layui-breadcrumb">
            <a>首页</a>
            @Html.Raw(ViewBag.PageTitle)
        </span>
        <a class="layui-btn layui-btn-sm" style="line-height:1.6em;margin-top:3px;float:right" href="javascript:location.replace(location.href);" title="刷新">
            <i class="layui-icon" style="line-height:30px">&#x1002;</i>
        </a>
    </div>
    @RenderBody()
    @RenderSection("scripts", required: false)
    <script type="text/html" id="listToolbar">
        <div class="layui-btn-container">
            @if (userActions.Any(a => a.ButtonCode == "Insert"))
            {
                <button class="layui-btn layui-btn-sm layui-btn-danger" lay-event="Insert">添加</button>
            }
            @if (userActions.Any(a => a.ButtonCode == "Print"))
            {
                <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="Print">打印</a>
            }
            @if (userActions.Any(a => a.ButtonCode == "Export"))
            {
                <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="Export">导出</a>
            }
        </div>
    </script>
    <script type="text/html" id="rowToolbar">
        @if (userActions.Any(a => a.ButtonCode == "Update"))
        {
            <a class="layui-btn layui-btn-xs" lay-event="Update">编辑</a>
        }
        @if (userActions.Any(a => a.ButtonCode == "Reset"))
        {
            <a class="layui-btn layui-btn-xs" lay-event="Reset">密码重置</a>
        }
        @if (userActions.Any(a => a.ButtonCode == "SetPower"))
        {
            <a class="layui-btn layui-btn-xs" lay-event="SetPower">设置权限</a>
        } 
        @if (userActions.Any(a => a.ButtonCode == "Remove"))
        {
            <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="Remove">删除</a>
        }
        @if (userActions.Any(a => a.ButtonCode == "Audit"))
        {
            <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="Audit">审核</a>
        }
    </script>
</body>
</html>
