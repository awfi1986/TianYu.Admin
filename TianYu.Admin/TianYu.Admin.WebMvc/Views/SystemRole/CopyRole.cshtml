@{
    var Roles = ViewBag.Roles as IEnumerable<SelectListItem>;
    ViewBag.Module = "角色拷贝";
    Layout = "~/Views/Shared/_Info.cshtml";
}

@section styles{

}
@section scripts{
    <script>

        layui.use(['jquery', 'form'], function () {
            var form = layui.form,
                $ = layui.jquery;
            //提交表单数据
            form.on('submit(Save)', function (data) {
                var param = data.field;
                var param = data.field;

                
                //参数处理
                var index = layer.load(1, { time: 60 * 1000 });
                $.ajax({
                    type: 'post',
                     url: '@Url.Action("CopyRoleUpdates")',
                    data: param,
                    dataType: 'json',
                    success: function (res) {
                        layer.close(index);

                        if (res.Status == 200) {
                            res = res.Data;
                            if (res.Status == 1) {
                                layer.msg('保存成功');
      //                          location.replace(location.href);
                            }
                            else {
                                layer.msg(res.ErrorMessage);
                            }
                        }
                        else {
                            layer.msg('请求错误：' + res.ErrorMessage + '，' + res.Status);
                        }
                    }
                });
                return false;
            });
        });
    </script>
}
 
<div class="weadmin-body">
    <form class="layui-form">
        @*隐藏字段*@
        <div class="layui-form-item">
            <label class="layui-form-label">
                <input type="hidden" name="Id" value="@ViewBag.RoleId" />
                <span class="we-red">*</span>角色名称：
            </label>
            <div class="layui-input-block" style="width:50%">
                @Html.DropDownList("CopyId", Roles as IEnumerable<SelectListItem>)
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">
            </label>
            <div class="layui-input-block">
                <button class="layui-btn" lay-filter="Save" lay-submit="">保存</button>
            </div>
        </div>

    </form>
</div>
